<%# locals: (username:) %>

<%= turbo_frame_tag(*username.turbo_frame_name, class: "block w-full") do %>
  <% if username.editable? %>
    <%= link_to(
          username.edit_url,
          data: { turbo_stream: true },
          class: "icon-link",
        ) do %>
      <%= username.link_content %>
      <%= inline_svg_tag("heroicons/pencil-square.svg") %>
    <% end %>
  <% else %>
    <%= username.updateable_display_name %>
  <% end %>
<% end %>
