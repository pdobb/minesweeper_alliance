<%# locals: (pattern:) %>

<%= turbo_frame_tag(:edit_pattern) do %>
  <%= form_with(
        model: pattern,
        url: ui_portal_pattern_path(pattern),
        html: { novalidate: true }) do |f| %>
    <div class="flex items-baseline gap-x-3">
      <%= f.label(:name, "Name:", class: "max-md:min-w-20") %>
      <%= f.text_field(
            :name,
            autocomplete: :off,
            autofocus: true,
            onfocus: "this.select()",
            data: { "1p-ignore": true },
            class: "form-input w-32 p-1") %>

      <%= f.submit("Update", class: "btn-primary") %>
    </div>
  <% end %>
<% end %>
