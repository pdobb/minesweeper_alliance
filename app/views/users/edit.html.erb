<%= form_with(model: current_user, url: user_path) do |f| %>
  <div class="flex flex-col gap-y-2">
    <div class="inline-flex items-center gap-x-3">
      <%= f.text_field(
            :username,
            autocomplete: :off,
            autofocus: true,
            placeholder: "Username",
            data: { "1p-ignore": true },
            class: "w-72 border-transparent border-b-gray-800") %>
      <%= f.submit("ACK", class: "btn-primary") %>
    </div>
    <p class="text-red-600"><%= f.object.errors[:username].join(", ") %></p>
  </div>
<% end %>
