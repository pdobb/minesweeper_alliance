<%= form_with(model: layout.current_user, url: user_path) do |f| %>
  <div class="flex flex-col gap-y-2">
    <div class="inline-flex items-center gap-x-3">
      <%= f.text_field(
            :username,
            autocomplete: :off,
            autofocus: true,
            onfocus: "this.select()",
            placeholder: "Username",
            data: { "1p-ignore": true },
            class: %w[
              w-80
              border-transparent focus:border-transparent
              border-b-red-800 dark:border-b-red-600
              focus:ring-0
              bg-transparent
              text-lg
            ]) %>
      <%= f.submit(Icon.check, class: "btn-basic text-xl") %>
    </div>
    <p class="text-red-600"><%= f.object.errors[:username].join(", ") %></p>
  </div>
<% end %>
