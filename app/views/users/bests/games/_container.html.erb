<%# locals: (container:) %>

<%= turbo_frame_tag(container.turbo_frame_name) do %>
  <div class="max-sm:px-3 md:max-lg:px-6 space-y-12">
    <% cache(container.cache_key) do %>
      <%= render("users/bests/games/content", content: container.content) %>
    <% end %>

    <div class="container mx-auto">
      <%= render("games/past/results", results: container.results) %>
    </div>
  </div>
<% end %>
