<% user = layout.current_user %>

<%= turbo_stream.update([user, "sign_game"]) do %>
  <%= render("users/sign_game", user:) %>
<% end %>

<%= turbo_stream.update([user, "duty_roster"]) do %>
  <%= render("games/duty_roster", user:) %>
<% end %>

<%= turbo_stream.update([user, "nav"]) do %>
  <%= render("application/username") %>
<% end %>

<% if @signer_status_has_changed %>
  <%= turbo_stream.update(:new_game) do %>
    <%= render("games/new", view: Games::New.new) %>
  <% end %>

  <%= turbo_stream.update(:welcome_banner) do %>
    <%= render(
          "home/welcome_banner",
          view: Home::Show::WelcomeBanner.new) %>
  <% end %>
<% end %>
