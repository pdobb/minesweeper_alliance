<%# locals: (notifications:) %>

<% Array.wrap(notifications).each do |notification| %>
  <div
    role="alert"
    data-controller="flash"
    data-flash-hide-class="opacity-0"
    <% if notification.timeout? %>
      data-flash-timeout-value="<%= notification.timeout_in_milliseconds %>"
    <% end %>
    data-action="transitionend->flash#remove"
    class="
      pointer-events-auto
      p-4 rounded-lg
      transition-opacity ease-in
      <%= class_names(notification.container_css_class) %>
    "
  >
    <span class="sr-only"><%= notification.type %></span>
    <div class="flex gap-x-6 items-start">
      <p><%= notification.content %></p>

      <button
        type="button"
        data-action="flash#close"
        class="
          -m-1.5 p-2 rounded-lg
          focus:ring-2 focus:animate-pulse-fast
          <%= class_names(notification.button_css_class) %>
        "
        aria-label="Close"
      >
        <span class="sr-only">Close</span>
        <%= inline_svg_tag(
              "heroicons/x-mark.svg",
              class: "stroke-2 size-[20px] max-w-[20px] max-h-[20px]") %>
      </button>
    </div>
  </div>
<% end %>
