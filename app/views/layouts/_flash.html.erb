<%# locals: () %>

<% ::Layouts::Flash.new(flash).notifications.each do |notification| %>
  <div
    role="alert"
    data-controller="flash"
    data-flash-hide-class="opacity-0"
    <% if notification.timeout? %>
      data-flash-timeout-value="<%= notification.timeout_in_milliseconds %>"
    <% end %>
    data-action="transitionend->flash#remove"
    class="
      p-4 rounded-lg
      transition-opacity ease-in
      dark:bg-neutral-900
      <%= class_names(notification.container_css_class) %>
    "
  >
    <span class="sr-only"><%= notification.type %></span>
    <div class="flex gap-x-6 items-baseline">
      <p><%= notification.message %></p>

      <button
        type="button"
        data-action="flash#close"
        class="
          -m-2 p-3 rounded-lg
          dark:bg-neutral-900 dark:hover:bg-neutral-800
          focus:ring-2
          <%= class_names(notification.button_css_class) %>
        "
        aria-label="Close"
      >
        <span class="sr-only">Close</span>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
