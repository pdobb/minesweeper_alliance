<%# locals: (view:) %>

<%= turbo_frame_tag(
      view.turbo_frame_name,
      class: "flex max-md:flex-col justify-center items-center gap-6") do %>
  <% view.presets.each do |preset| %>
    <%= button_to(
          preset,
          view.game_url(preset),
          class: "btn-primary",
          data: { turbo_frame: :_top }) %>
  <% end %>

  <%= button_to(
        "Random",
        view.random_game_url,
        class: "btn-primary",
        data: { turbo_frame: :_top }) %>

  <% if current_user.signer? %>
    <%= button_to(
          "Custom",
          view.new_custom_game_url,
          method: :get,
          class: "btn-primary",
          data: { turbo_stream: true }) %>
  <% end %>
<% end %>
