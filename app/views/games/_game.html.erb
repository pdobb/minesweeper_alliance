<table class="mx-auto">
  <tbody
    class="
      <%# Cells %>
      *:*:size-8
      *:*:border *:*:border-slate-600
      *:*:text-center
      <% if game_view.status_in_progress? %>
        <%# Cell Links %>
        *:*:*:inline-block *:*:*:size-full *:*:*:cursor-cell
      <% end %>
    "
  >
    <% game_view.rows.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td class="<%= cell.css_class %>">
            <%=
              link_to_if(
                cell.clickable?,
                cell.render,
                cell_reveal_path(cell),
                data: {
                  controller: "cell",
                  turbo_method: :post
                }) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
