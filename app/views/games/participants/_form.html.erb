<%# locals: (form:) %>

<%= form_with(
      model: form.to_model,
      url: form.post_url,
      id: form.dom_id) do |f| %>
  <div class="flex flex-col gap-y-2">
    <div class="inline-flex items-center gap-x-3">
      <%= f.text_field(
            :username,
            autocomplete: :off,
            autofocus: true,
            onfocus: "this.select()",
            placeholder: "Username",
            data: { "1p-ignore": true },
            class: "form-input w-80") %>

      <%= f.submit(Emoji.check, class: "btn-basic text-xl") %>
      <%= link_to(
            Emoji.hide,
            form.cancel_url,
            class: "no-underline text-xl",
            data: {
              inline_edit_target: "cancel",
              turbo_stream: true,
            }) %>
    </div>
    <p class="form-error"><%= f.object.errors[:username].join(", ") %></p>
  </div>
<% end %>
