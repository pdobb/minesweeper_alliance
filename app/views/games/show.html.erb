<%= turbo_stream_from @game_view.board %>

<table class="mx-auto">
  <tbody
    class="
      *:*:p-1
      *:*:size-8
      *:*:border *:*:border-slate-600
      *:*:text-center
    "
  >
    <% @game_view.rows.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td class="<%= cell.css_class %>">
            <%= cell.render %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
