<%# locals: (performance_metrics:) %>

<% performance_metrics.score.tap do |score| %>
  <tr class="<%= class_names(score.container_css) %>">
    <th>
      <%= render(score.partial_path) if score.best? %>
      <%= render("tooltip", text: "Score") %>
    </th>
    <td>
      <time datetime="PT<%= score %>S"><%= score %></time>
    </td>
  </tr>
<% end %>

<tr>
  <th><%= render("tooltip", text: "3BV", term: "bbbv") %></th>
  <td><%= performance_metrics.bbbv %></td>
</tr>

<% performance_metrics.bbbvps.tap do |bbbvps| %>
  <tr class="<%= class_names(bbbvps.container_css) %>">
    <th>
      <%= render(bbbvps.partial_path) if bbbvps.best? %>
      <%= render("tooltip", text: "3BV/s", term: "bbbvps") %>
    </th>
    <td><%= bbbvps %></td>
  </tr>
<% end %>

<% performance_metrics.efficiency.tap do |efficiency| %>
