<%# locals: (board:) %>

<div
  class="
    [--negative-board-mx:--spacing(4)]
    mx-auto md:w-fit md:max-w-full space-y-2
  "
>
  <%= render("games/past/board/header", header: board.header) %>

  <div class="-mx-(--negative-board-mx) overflow-x-auto scrollbar-hidden">
    <%= render("games/past/board/content", content: board.content) %>
  </div>

  <%= render("games/board/footer", footer: board.footer) %>
</div>
