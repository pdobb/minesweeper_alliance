<%# locals: (roster:) %>

<div class="space-y-3">
  <h4 class="h3">Duty Roster</h4>

  <ol class="list-decimal list-inside space-y-2">
    <% roster.listings.each_with_index do |listing, index| %>
      <li>
        <%= link_to(
              listing.name,
              listing.show_user_url,
              data: { turbo_frame: :_top }) %>
      </li>
    <% end %>
  </ol>
</div>
