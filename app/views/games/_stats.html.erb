<div
  class="
    flex flex-wrap md:flex-nowrap md:justify-center
    gap-x-24 gap-y-12
    whitespace-nowrap
  "
>
  <div class="space-y-6">
    <h3>Game Stats</h3>

    <ul class="space-y-2">
      <li><strong>Duration</strong>: <%= view.duration %></li>
      <li><strong># Reveals</strong>: <%= view.reveals_count %></li>
      <li><strong># Flags Placed</strong>: <%= view.flags_count %></li>
      <li><strong># Flags Removed</strong>: <%= view.unflags_count %></li>
      <li><strong># Active Players</strong>: <%= view.players_count %></li>
    </ul>
  </div>
  <div class="space-y-6">
    <h3>Duty Roster</h3>

    <div class="flex flex-col gap-y-2">
      <% view.duty_roster.each_with_index do |user, index| %>
        <div class="flex items-baseline gap-x-3">
          <span><%= index.next %>.</span>

          <% if layout.current_user?(user) %>
            <%= render("users/editable_username", user:) %>
          <% else %>
            <%= user.display_name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
