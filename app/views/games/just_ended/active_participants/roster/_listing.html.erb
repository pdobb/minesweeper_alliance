<%# locals: (listing:) %>

<li>
  <% if listing.show_current_user_indicator?(current_user) %>
    <span title="Me"><%= Emoji.eyes %></span>
  <% end %>

  <%= link_to(
        listing.updateable_display_name,
        listing.show_user_url,
        data: { turbo_frame: :_top }) %>

  <% if listing.show_game_participation_indicators? %>
    <%= render(
          "games/past/active_participants/roster/listing_indicators",
          listing:) %>
  <% end %>
</li>
