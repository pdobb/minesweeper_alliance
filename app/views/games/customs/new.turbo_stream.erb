<%= turbo_stream.update(:new_game) do %>
  <div
    data-controller="inline-edit"
    data-action="keydown.esc@window->inline-edit#cancel"
  >
    <div
      data-inline-edit-target="beforeEdit"
      class="hidden"
    >
      <%= render("games/new", view: Games::New.new) %>
    </div>
    <div data-inline-edit-target="editing">
      <%= render(
            "games/customs/form",
            form: Games::Customs::New::Form.new(@settings, context: layout)) %>
    </div>
  </div>
<% end %>

