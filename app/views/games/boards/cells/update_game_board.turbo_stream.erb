<%= turbo_stream.replace(
      :current_game,
      partial: "games/game",
      locals: { view: Games::Show.new(game: @game) }) %>

<% if @game.just_ended? %>
  <%= turbo_stream.update(
        :game_details,
        partial: "games/results",
        locals: {
          view: Games::Results.new(game: @game, user: layout.current_user)
        }) %>
<% end %>
