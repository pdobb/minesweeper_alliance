<%= turbo_stream.replace(
      :current_game,
      partial: "games/game",
      locals: { view: Games::Show.new(game: @game) }) %>

<% if @game.just_ended? %>
  <%= turbo_stream.update(
        :game_details,
        partial: "games/stats",
        locals: { view: Games::Stats.new(game: @game) }) %>
<% end %>
