<%# locals: (view:) %>

<%= form_with(
      model: view.form_model,
      url: view.update_form_url) do |f| %>
  <div class="flex flex-col gap-y-2">
    <div class="inline-flex items-center gap-x-3">
      <%= f.text_field(
            :username,
            autocomplete: :off,
            autofocus: true,
            onfocus: "this.select()",
            placeholder: "Username",
            data: { "1p-ignore": true },
            class: "form-input w-80") %>
      <%= f.submit(Emoji.check, class: "btn-basic text-xl") %>
    </div>
    <p class="form-error"><%= f.object.errors[:username].join(", ") %></p>
  </div>
<% end %>
