<%# locals: (content:) %>

<%= turbo_frame_tag(
      content.turbo_frame_name,
      class: "flex max-md:flex-col justify-center items-center gap-6") do %>
  <% content.presets.each do |preset| %>
    <%= button_to(
          preset,
          content.game_url(preset),
          class: "btn-primary",
          data: { turbo_frame: :_top }) %>
  <% end %>

  <%= button_to(
        "Random",
        content.random_game_post_url,
        class: "btn-primary",
        data: { turbo_frame: :_top }) %>

  <% if App.debug? %>
    <%= button_to(
          "Random Pattern",
          content.random_pattern_game_post_url,
          class: "btn-primary",
          data: { turbo_frame: :_top }) %>
  <% end %>

  <% if content.show_new_custom_game_button?(current_user) %>
    <%= button_to(
          "Custom",
          content.new_custom_game_url,
          method: :get,
          form: { id: "newCustomGameButton" },
          class: "btn-primary",
          data: { turbo_stream: true }) %>
  <% end %>
<% end %>
