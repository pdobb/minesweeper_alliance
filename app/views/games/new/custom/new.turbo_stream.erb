<%= turbo_stream.update(@view.turbo_frame_name) do %>
  <div
    data-controller="inline-edit"
    data-action="keydown.esc@window->inline-edit#cancel"
  >
    <div
      data-inline-edit-target="beforeEdit"
      class="hidden"
    >
      <%= render("games/new/content", content: @view.new_game_content) %>
    </div>
    <div data-inline-edit-target="editing">
      <%= render("games/new/custom/form", form: @view.form(context: layout)) %>
    </div>
  </div>
<% end %>

