<%# locals: (status:) %>

<div class="container mx-auto">
  <h2 class="text-center cursor-default">
    <span class="<%= class_names(status.game_status_css) %>">
      <%= status.game_status %>
    </span>

    <span
      title="The number of current Minesweepers/Spectators"
      class="inline-flex gap-x-2"
    >
      <%= status.game_status_emoji %>
      <small
        id="fleet_size"
        class="
          before:content-['x'] before:mx-1 before:text-[17px]
          font-normal text-dim
        "
      ><%= status.fleet_size %></small>
    </span>
  </h2>
</div>
