<%# locals: (container:) %>

<% content_for(:page_nav) do %>
  <%= render("games/current/page_nav", nav: container.nav) %>
<% end %>

<%= turbo_frame_tag(
      container.turbo_frame_name,
      data: { version: container.version }) do %>
  <div class="space-y-12">
    <%= render("games/current/content", content: container.content) %>

    <div class="container mx-auto">
      <%= render("games/current/footer", footer: container.footer(layout)) %>
    </div>
  </div>
<% end %>
