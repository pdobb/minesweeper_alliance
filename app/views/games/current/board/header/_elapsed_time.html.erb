<%# locals: (elapsed_time:) %>

<time
  id="<%= Games::Board::ElapsedTime.turbo_target %>"
  <% if elapsed_time.sweep_in_progress? %>
    data-controller="elapsed-time"
    data-elapsed-time-start-value="<%= elapsed_time.to_i %>"
  <% end %>
  title="<%= t("game.board.header.timer.title") %>"
  datetime="PT<%= elapsed_time.to_i %>S"
><%= elapsed_time %></time>
