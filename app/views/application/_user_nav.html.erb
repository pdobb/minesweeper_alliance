<%# locals: (user_nav:) %>

<%= turbo_frame_tag(*user_nav.turbo_frame_name) do %>
  <% if user_nav.signer? %>
    <%= active_link_to(
          user_nav.user_url,
          includes: Users::GamesController.name,
          data: { turbo_frame: :_top }) do %>
      <span class="max-md:hidden">
        <%= user_nav.display_name %>
      </span>
      <%= Emoji.profile %>
    <% end %>
  <% else %>
    <span class="max-md:hidden"><%= t("site.name") %></span>
  <% end %>
<% end %>
