  "shortcuts": [
    {
      "name": "War Room",
      "description": "New / Current Game",
      "url": "<%= root_path %>",
      "icons": [{ "src": "<%= image_url("heroicons/home.svg") %>", "sizes": "any" }]
    },
    {
      "name": "Sweep Ops Archive",
      "description": "Past Games",
      "url": "<%= games_path %>",
      "icons": [{ "src": "<%= image_url("heroicons/archive-box.svg") %>", "sizes": "any" }]
    },
    {
      "name": "Metrics",
      "description": "Top Players & Games",
      "url": "<%= metrics_path %>",
      "icons": [{ "src": "<%= image_url("heroicons/trophy.svg") %>", "sizes": "any" }]
    },
    {
      "name": "About",
      "description": "About Minesweeper Alliance",
      "url": "<%= about_path %>",
      "icons": [{ "src": "<%= image_url("heroicons/information-circle.svg") %>", "sizes": "any" }]
    }
  ]
