{
  "name": "<%= t("site.name") %>",
  "short_name": "<%= t("site.short_name") %>",
  "icons": [
    {
      "src": "/icon-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/icon-512-mask.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    },
    {
      "src": "/icon-512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "start_url": "<%= root_path %>",
  "display": "standalone",
  "scope": "<%= root_path %>",
  "description": "<%= t("site.meta_description") %>",
